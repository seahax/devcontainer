{
  "image": "ghcr.io/seahax/devcontainer:latest",
  // Pull an updated image before (re-)building the dev container.
  "initializeCommand": "docker pull ghcr.io/seahax/devcontainer:latest",
  // Run the on-create script included in the image.
  "onCreateCommand": "$HOME/.devcontainer-on-create.zsh",
  "mounts": [
    // Mount the host's home directory to the container. Required for config
    // file linking, which is setup by the "$HOME/.devcontainer-on-create.zsh"
    // script that should be used as the dev container "onCreateCommand"..
    "source=${localEnv:HOME}${localEnv:USERPROFILE},target=/home/vscode/.remote,type=bind"
  ],
  "features": {
    // Allow the dev container to access the host's Docker daemon.
    "ghcr.io/devcontainers/features/docker-in-docker:2": { }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        // Please be considerate of your fellow devcontainer users when adding
        // extensions. If an extension significantly alters the behavior of
        // VSCode, discuss it with the team before adding it. You can always
        // manually sync your own local extensions to the dev container after
        // each (re-)build if you want to use extensions that are not
        // automatically installed.
        "bierner.markdown-preview-github-styles",
        "byi8220.indented-block-highlighting",
        "chrisbibby.hide-git-ignored",
        "dbaeumer.vscode-eslint",
        "donjayamanne.githistory",
        "ecmel.vscode-html-css",
        "github.copilot-chat",
        "github.copilot",
        "Gruntfuggly.todo-tree",
        "maattdd.gitless",
        "nhoizey.gremlins",
        "pflannery.vscode-versionlens",
        "redhat.vscode-yaml",
        "streetsidesoftware.code-spell-checker-scientific-terms",
        "streetsidesoftware.code-spell-checker",
        "tamasfe.even-better-toml",
        "unional.vscode-sort-package-json",
        "vitest.explorer",
        "yzhang.markdown-all-in-one",
        "ziyasal.vscode-open-in-github",
        "zxh404.vscode-proto3"
      ],
      "settings": {
        // Please don't add extension configurations here. Configuration for
        // extensions should be left up to the individual devcontainer user.
        "remote.autoForwardPorts": true,
        "remote.autoForwardPortsSource": "process",
        "remote.autoForwardPortsFallback": 0,
        "remote.restoreForwardedPorts": false,
        "editor.tabSize": 2,
        "files.eol": "\n",
        "terminal.integrated.defaultProfile.linux": "zsh",
        "workbench.view.showQuietly": {
          "workbench.panel.output": true
        },
        "typescript.tsdk": "node_modules/typescript/lib"
      }
    }
  }
}
